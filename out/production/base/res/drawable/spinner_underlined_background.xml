<?xml version="1.0" encoding="utf-8"?>
<inset
  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector android:autoMirrored="true">
        <item android:state_enabled="false">
            <layer-list>
                <item>
                    <nine-patch android:src="@drawable/abc_textfield_default_mtrl_alpha" android:tint="?colorControlNormal" android:alpha="?android:disabledAlpha" />
                </item>
                <item>
                    <nine-patch android:src="@drawable/abc_spinner_mtrl_am_alpha" android:tint="?colorControlNormal" android:alpha="?android:disabledAlpha" />
                </item>
            </layer-list>
        </item>
        <item android:state_focused="false" android:state_pressed="false">
            <layer-list>
                <item>
                    <nine-patch android:src="@drawable/abc_textfield_default_mtrl_alpha" android:tint="?colorControlNormal" />
                </item>
                <item>
                    <nine-patch android:src="@drawable/abc_spinner_mtrl_am_alpha" android:tint="?colorControlNormal" />
                </item>
            </layer-list>
        </item>
        <item>
            <layer-list>
                <item>
                    <nine-patch android:src="@drawable/abc_textfield_activated_mtrl_alpha" android:tint="?colorControlActivated" />
                </item>
                <item>
                    <nine-patch android:src="@drawable/abc_spinner_mtrl_am_alpha" android:tint="?colorControlActivated" />
                </item>
            </layer-list>
        </item>
    </selector>
</inset>